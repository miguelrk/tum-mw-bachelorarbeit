{
  "datasources": {
    "text": {
      "source": "var",
      "params": {
        "id": "INSERT P_VALUES_CURRENT ID"
      }
    },
    "color": {
      "source": "var",
      "params": {
        "id": "INSERT P_VALUES_CURRENT ID"
      }
    }
  },
  "bindings": {
    "text": {
      "value": {
        "source": "dataref",
        "params": {
          "ref": "text"
        }
      },
      "defaultValue": "---",
      "exceptionValue": "Ex!"
    },
    "fillColor": {
      "value": {
        "source": "function",
        "defaultValue": "white",
        "params": {
          "name": "map",
          "params": {
            "input": {
              "source": "function",
              "params": {
                "name": "sum",
                "params": {
                  "values": [
                    0,
                    {
                      "source": "dataref",
                      "params": {
                        "ref": "color"
                      }
                    }
                  ]
                }
              }
            },
            "map": [
              [
                0,
                "red"
              ],
              [
                2,
                "green"
              ]
            ]
          }
        }
      }
    }
  }
}