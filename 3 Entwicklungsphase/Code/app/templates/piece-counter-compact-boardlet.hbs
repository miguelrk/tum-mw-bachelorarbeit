<h2 class="compact-kpi-headline">{{t 'kpi-compact.piece-counter-title'}}</h2>


<div class="chart-container"> 
</div>

<div class="left-bar">
    <div class="cell number-cell">
        <label class="title">
            {{currentKPILabel}}
        </label>
        <div> 
            {{currentKPIValue}}
        </div>
    </div>
    <div class="cell number-cell">
        <label class="title">
            {{currentKPITrend1Label}}
        </label>
        <div> 
            {{currentKPITrend1Value}}
        </div>
    </div>
    <div class="cell number-cell">
        <label class="title">
            {{currentKPITrend2Label}}
        </label>
        <div> 
            {{currentKPITrend2Value}}
        </div>
    </div>
    <div class="cell number-cell">
        <label class="title">
            {{totalKPILabel}}
        </label>
        <div> 
            {{totalKPIValue}}
        </div>
    </div>
    <div class="cell with-icon">
        <label class="title">
            {{graphicControlLabel}}
        </label>
        <div class="icon-piececounter"> 
           <img src={{graphicControlValue}}/>
        </div>
    </div>
</div>

<div class="value-highlight">
    {{currentKPIChartValue}}
</div>
<svg style="visibility:hidden; height: 0;">
	<defs>
        <linearGradient id="gradient-0" x1="0" y1="0" x2="0" y2="1">
            <stop offset="0" />
            <stop offset="1" />
        </linearGradient>
    </defs>
</svg>