<div class="form" style="margin-bottom:8pt">
  <div id="pid-shape-library" class="form-line">
    <span style=“font-weight:bold;”>P&amp;ID Shapes Library:</span>
    {{json-load-component id=(concat 'json-load-' elementId) typeAccept = '.json' onLoadSuccess=(action 'loadSuccess' 'pidShapesLibrary')
    onLoadError=(action 'loadError')}}
  </div>

  <div class="form-line">
    <label>Selected Root Node Id:</label>
    <div id="selection-field" class="input-with-icon">
      <input id="root-node-selection" type="text" placeholder="Please select a valid root node." />
    </div>
  </div>

  <br />

  <div id="generate-pid-button" class="button button-success disabled" style="margin-bottom:8pt;width:100%">
    <span class="icon-export button-text"> Generate P&amp;ID Visualization</span>
  </div>
  {{#if showProgressBar}}{{progress-bar current=currentProgressValue max=maxProgressValue}}{{/if}}

  <br />

  <div id="xml-viewer-div" style="margin-bottom:8pt;width:100%;height:230px;float:right;overflow:scroll;font-family: sans-serif;"></div>

  <br />

  <div style="width:100%;display:flex;flex-wrap:wrap;margin-bottom:2pt auto;text-align:center">
    <div id="download-json-button" class="button disabled" style="flex-basis:49.5%;flex-grow:1;display:inline-block;margin-bottom:3pt;margin-right:1pt">
      <span class="icon-download button-text"> Download P&amp;ID as JSON</span>
    </div>
    <div id="download-xml-button" class="button disabled" style="flex-basis:49.5%;flex-grow:1;display:inline-block;margin-bottom:3pt;margin-left:1pt">
      <span class="icon-download button-text"> Download P&amp;ID as XML</span>
    </div>
  </div>

  <div id="upload-pid-button" class="button button-success disabled" style="width:100%">
    <span class="icon-upload button-text"> Upload P&amp;ID Visualization</span>
  </div>

</div>
